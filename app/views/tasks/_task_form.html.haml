.modal-header
  %h1= task.new_record? ? 'Nouvelle tâche' : "Éditer la tâche : #{task.title}"
= simple_form_for task, class: 'clearfix', remote: true do |f|
  .modal-body
    = f.input :title
    = f.input :note
    = f.input :completed
  .modal-footer
    = f.submit 'Enregistrer cette tâche', class: 'btn btn-primary'